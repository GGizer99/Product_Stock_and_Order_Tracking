@using Product_Stock_and_Order_Tracking.Models
@model List<Products>
@{
    ViewBag.Title = "StockTrack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr style="background-color:silver">
        <th>Stok Sayısı</th>
        <th>Ürün Bilgisi</th>
        <th>Ürün Fiyatı</th>
    </tr>

    @foreach (var pr in Model)
    {
        <tr>
            <td>@pr.Stock</td>
            <td>@pr.Name</td>
            <td>@pr.Price</td>
            
        </tr>
    }
</table>

